    <script type="text/javascript">

        function ShowLoader() {
            $(".loader").show();
            //return false;
        }

        function HideLoader() {
            $(".loader").hide();
            //return true;
        }


        $(document).ready(function () {

            ///////Below Code is to check session is expire or not on page load////
            var session = "@session";
            if (session == null) {
                swal({
                    title: "Warning!",
                    text: "Sorry, you were logged out, Please login again.",
                    type: "error",
                    icon: "error",
                }, function () {
                    window.location = "../Account/Signup";
                });
            }
            ////////End///////

            $("#menu-bar").click(function () {
                if ($('#slide-menu').hasClass('left-menu-open')) {
                    $('#slide-menu').removeClass('left-menu-open');
                }
                else {
                    $('#slide-menu').addClass('left-menu-open');
                }
            });
            $('.nav-menu-li').click(function () {
                $('.sub-menu').slideUp();
                $('.nav-menu-li').find('i').removeClass('open-icon');
                if ($(this).find('.sub-menu').is(':visible')) {
                    $(this).find('.sub-menu').slideUp();
                    $(this).find('i').removeClass('open-icon');
                }
                else {
                    $(this).find('.sub-menu').slideDown();
                    $(this).find('i').addClass('open-icon');
                }
            });

            $("#productCategory").select2();

        });


        //initSample();
        //$('#editor').ckeditor();

    </script>

