                $('form').validate();

                if ($('form').valid()) {

                    var Category_ID = $.trim($("#ddlCategory").val());
                    var Sub_Category_ID = $.trim($("#ddlSubCategory").val());
                    var Product_Variant_Id = $.trim($("#ddlProduct_Variant").val());
