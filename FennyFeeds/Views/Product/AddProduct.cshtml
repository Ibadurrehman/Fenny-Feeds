                        @Html.ValidationMessageFor(model => model.Brand)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4 text-right">
                        <label class="lb-name">Product Name :</label>
                    </div>
                    <div class="col-sm-4">
                        @*<input type="text" class="form-control" placeholder="Enter Product Name" />*@
